<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/zedtal"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".registration_checker">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="162dp"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView18"
            android:layout_width="292dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/archivo_black"
            android:gravity="center"
            android:text="Registration Verification"
            android:textColor="#FFFFFF"
            android:textSize="35sp" />

        <ImageView
            android:id="@+id/imageView21"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_baseline_how_to_reg_24" />

    </LinearLayout>

    <EditText
        android:id="@+id/reg_name"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:background="#FFFFFF"
        android:drawableRight="@drawable/ic_baseline_person_26"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        android:padding="5dp" />

    <EditText
        android:id="@+id/reg_contact"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:background="#FFFFFF"
        android:drawableRight="@drawable/ic_baseline_call_29"
        android:ems="10"
        android:hint="Phone No. "
        android:inputType="phone"
        android:padding="5dp" />

    <Button
        android:id="@+id/reg_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:drawableRight="@drawable/ic_baseline_verified_user_24"
        android:onClick="verify_registration"
        android:text="verify"
        app:backgroundTint="#9E1D1D" />
</LinearLayout>