<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/zedtal"
    android:orientation="vertical"
    tools:context=".findcenter">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="279dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/archivo_black"
                android:gravity="center"
                android:text="Find Vaccination Centers"
                android:textColor="#FFFFFF"
                android:textSize="27sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="20dp"
                app:srcCompat="@drawable/ic_baseline_flag_24" />
        </LinearLayout>
    </LinearLayout>

    <pl.droidsonroids.gif.GifImageView
        android:layout_width="wrap_content"
        android:layout_height="177dp"
        android:padding="10dp"
        android:src="@drawable/penregister" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="221dp"
        android:layout_margin="1dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="199dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView21"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginLeft="15dp"
                android:background="#9E1D1D"
                android:fontFamily="@font/archivo_black"
                android:gravity="center"
                android:text="Punjab"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="15dp">

                <ImageButton
                    android:id="@+id/geolahore3"
                    android:layout_width="178dp"
                    android:layout_height="138dp"

                    android:layout_marginEnd="15dp"
                    android:layout_marginRight="15dp"
                    android:onClick="setGeolahore"
                    android:padding="10sp"
                    app:srcCompat="@drawable/lahore" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView25"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginLeft="15dp"
                android:background="#9E1D1D"
                android:fontFamily="@font/archivo_black"
                android:gravity="center"
                android:text="Sindh"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp">

                <ImageButton
                    android:id="@+id/geokarachi4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:onClick="setGeokarachi"
                    android:padding="10sp"
                    app:srcCompat="@drawable/karachi" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="221dp"
        android:layout_margin="1dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView21"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginLeft="15dp"
                android:background="#9E1D1D"
                android:fontFamily="@font/archivo_black"
                android:gravity="center"
                android:text="KPK"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/geokpk3"
                    android:layout_width="186dp"
                    android:layout_height="122dp"
                    android:layout_weight="1"
                    android:onClick="setGeokpk"
                    android:padding="10sp"
                    app:srcCompat="@drawable/kpk" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView25"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginLeft="15dp"
                android:background="#9E1D1D"
                android:fontFamily="@font/archivo_black"
                android:gravity="center"
                android:text="Balochistan"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/geobalochistan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="setGeobalochistan"
                    app:srcCompat="@drawable/blochistan" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>